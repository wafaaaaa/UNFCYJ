@model CYJ.Models.ABOUT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<h2>Edit Post</h2>

@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h2 class="aboutheader" style="color:white">ABOUT</h2>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.about1, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to About page", "Home")
</div>
